import java.util.Scanner;
public class termosUso {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		
		System.out.println("Digite 1 para Sim\n       2 para Não");
		int opcao = teclado.nextInt(); 
		validaResposta(opcao);
		
teclado.close();
}
	
	public static void validaResposta(int opcao) {
		if(opcao != 1){
			System.out.println("instalação cancelada !!!");
	}
		else System.out.println("Continuando a instalação !!!" );
			}
}